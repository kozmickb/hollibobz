# Core Application Settings
NODE_ENV=production
PORT=3000
SERVICE_NAME=odysync

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database

# CORS Configuration
CORS_ORIGINS=https://your-frontend.app,https://another-domain.com
CORS_ORIGIN=*

# API Keys - Aviation & Flight Data
AVIATIONSTACK_API_KEY=your_aviationstack_api_key_here
AERODATABOX_RAPIDAPI_KEY=your_aerodatabox_rapidapi_key_here
AERODATABOX_RAPIDAPI_HOST=your_aerodatabox_rapidapi_host_here

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
XAI_API_KEY=your_xai_api_key_here

# Alternative AI API Keys (for frontend compatibility)
EXPO_PUBLIC_VIBECODE_OPENAI_API_KEY=your_openai_api_key_here
EXPO_PUBLIC_VIBECODE_DEEPSEEK_API_KEY=your_deepseek_api_key_here
EXPO_PUBLIC_VIBECODE_XAI_API_KEY=your_xai_api_key_here

# AI Usage Limits
EXPO_PUBLIC_AI_LIMIT_PRO=200
EXPO_PUBLIC_AI_LIMIT_FREE=15

# Database Connection Settings
DB_WAIT_RETRIES=20
DB_WAIT_DELAY_MS=1500

# Application Environment
APP_ENV=production
ALLOWED_ORIGINS=https://your-frontend.app

# Monitoring & Metrics
METRICS_TOKEN=your_metrics_token_here
GIT_COMMIT=your_git_commit_hash_here

# Railway Deployment
# These are typically set by Railway automatically:
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=your_project_id
# RAILWAY_SERVICE_ID=your_service_id
